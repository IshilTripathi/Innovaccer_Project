<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ContraintLayoutChoose"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_screen_background"
    tools:context=".Choose"
    tools:layout_editor_absoluteY="25dp">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/Customer"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_marginTop="200dp"
        android:background="@color/primaryDarkColor"
        android:elevation="50dp"
        android:text="....CHECK IN AS A CUSTOMER...."
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Host"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_marginTop="24dp"
        android:background="@color/primaryDarkColor"
        android:elevation="50dp"
        android:text="....BE A HOST...."
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Customer" />



</androidx.constraintlayout.widget.ConstraintLayout>